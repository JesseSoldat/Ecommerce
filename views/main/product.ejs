<% layout('layout') -%>

<div class="container default-navbar-gap">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= product.image %>" alt="product">
    </div>

    <div class="col-md-4"></div>

    <div class="col-md-4">
      <h3><%= product.name %></h3>
      <h1><%= product.price %></h1>

      <form action="/product/<%= product._id %>" method="post">
        <div class="btn-group" role="group">
          <input type="hidden" name="quantity" id="quantity" value="1" />
          <button class="btn btn-default" type="button" id="minus">
            -
          </button>
          <button type="button" class="btn btn-default" id="total">
            1
          </button>
          <button type="button" class="btn btn-default" id="plus">
            +
          </button>
        </div>

        <div class="form-group" style="margin-top: 5px; padding-bottom: 100px">
          <input type="hidden" name="product_id" id="product_id"  
            value="<%= product._id %>"/>

          <input type="hidden" name="priceHidden" id="priceHidden"
            value="<%= product.price %>"/>

         
          <input type="text" name="item" 
            class="form-control"
            style="margin-top: 5px"
            value="<%= product.name %>"/>
    
          <input type="text" name="priceValue" id="priceValue" 
            class="form-control"
            style="margin-top: 5px"
            value="<%= product.price %>" />

          <% if (user)  { %>
            <button class="btn btn-primary" type="submit" style="margin-top: 5px">
              Add to Cart
            </button>
          <% } else { %>
            <a href="/signup" class="btn btn-warning">
              Signup to begin buying!
            </a>
          <% } %>
        </div>
      </form>

    </div>
  </div>
</div>