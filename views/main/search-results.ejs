<% layout('layout') -%>
<div class="container default-navbar-gap">

  <% if(data.length === 0) { %>
    <h3>No Search Results</h3>

  <% } else { %>
    <h3>Results from <%= query %></h3>
    <div class="row">
      <% for(let i = 0; i < data.length; i++) { %>
        <div class="col-md-4">
          <a href="/product/<%= data[i]._source._id %>">
            <div class="thumbnail">
              <img src="<%= data[i]._source.image %>" alt="product image" />
              <div class="caption">
                <h3><%= data[i]._source.name %></h3>
                <!-- <p><%= data[i]._source.category.name %></h3> -->
                <p>$<%= data[i]._source.price.toFixed(2) %></p>
              </div>
            </div>
          </a>
        </div>

      <% } %>
    </div>
  <%  } %>

</div>