<% layout('layout') -%>

<div class="container default-navbar-gap">
  <div class="row">
    <% for(let i = 0; i < products.length; i++) { %>
      <div class="col-md-3">
        <a href="/product/<%= products[i]._id %>">
          <div class="thumbnail" style="height: 400px">
            <img src="<%= products[i].image %>" alt="product">
            <div class="caption">
              <h3><%= products[i].name %></h3>
              <p><%= products[i].category.name %></p>
              <p>$<%= products[i].price.toFixed(2) %></p>              
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>

  <nav aria-label="Page navigation">
      <ul class="pagination text-center" 
      style="padding-bottom: 70px">
        <% for(let i = 1; i <= pages; i++) { %>
  
          <% if(i === 1) { %>
  
            <% if(i == page) { %>
  
              <li class="active"><a href="/products/<%= id %>" ><%= i %></a></li>
  
            <% } else { %>
  
              <li><a href="/products/<%= id %>"><%= i %></a></li>
  
            <% } %>
  
          <% } else if(i == page) { %>
  
            <li class="active">
              <a href="/category/<%= id %>/page/<%= i %>"><%= i %></a>
            </li>
  
          <% } else { %>
  
            <li>
              <a href="/category/<%= id %>/page/<%= i %>"><%= i %></a>
            </li>
  
          <% } %>
  
        <% } %>
      </ul>
    </nav>

  
</div>